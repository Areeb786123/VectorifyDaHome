<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base DayNight theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/system_bars_color</item>
        <item name="colorPrimaryDark">@color/system_bars_color</item>
        <item name="android:statusBarColor">@color/system_bars_color</item>
        <item name="android:navigationBarColor">@color/system_bars_color</item>
        <item name="android:windowBackground">@color/activity_background_color</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
        <item name="md_color_button_text">@color/vectors_color</item>
        <item name="md_corner_radius">@dimen/md_corner_radius</item>
        <item name="md_font_title">@font/raleway_black</item>
        <item name="android:fontFamily">@font/raleway</item>
    </style>

    <style name="PopupMenu" parent="@style/Widget.MaterialComponents.PopupMenu">
        <item name="android:popupElevation">2dp</item>
    </style>

    <style name="ToolbarStyle.Title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/raleway_black</item>
    </style>

    <!-- Chip text appearance -->
    <style name="chipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <!-- This will set the fade in animation on all the activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>
